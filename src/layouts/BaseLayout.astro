---
import "~/styles/reset.css";
import "~/styles/base.css";

import smartypants from "smartypants";
import Header from "~/components/header.astro"; // 1. Headerコンポーネントをインポート

const siteName = "あいにP | AiniP";

export interface Props {
  title: string;
  description: string;
  image?: {
    src: string;
    alt: string;
  };
}

const { title, description, image } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const pageTitle = Astro.url.pathname === "/" ? title : `${title} · ${siteName}`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="AiniP" />
    <link rel="manifest" href="/site.webmanifest" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;200;300&display=swap" rel="stylesheet">

    <title set:html={smartypants(pageTitle, 1)} />
    <meta name="description" content={smartypants(description, 1)} />
    <meta property="og:title" content={smartypants(title, 1)} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={smartypants(description, 1)} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content={siteName} />
    {
      image && (
        <>
          <meta property="og:image" content={image.src} />
          <meta property="og:image:alt" content={image.alt} />
        </>
      )
    }
  </head>
  <body>
    <Header /> {/* 2. Headerコンポーネントを<body>の最初に追加 */}
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  main {
    /* この指定で、mainがページの主要なコンテンツブロックであることを明確にします */
    padding-top: 80px;
  }
</style>