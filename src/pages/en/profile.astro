---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { ui } from '~/i18n/ui';

const lang = "en"; // 英語ページとして固定
const t = ui[lang];

const profileName = "AiniP";
const profileDescription = "Illustrator / AI + Retouch / DM for work inquiries.";
const icon1Name = "Sub1";
const icon2Name = "Sub2";
const icon3Name = "Main";
const icon4Name = "Sub4";
const icon5Name = "Sub5";
---
<BaseLayout>
  <div class="container">
    <section class="profile-section">
      <img src="/images/icon.jpg" alt="Profile Icon" class="profile-icon" />
      <div class="profile-text">
        <h1>{profileName}</h1>
        <p>{profileDescription}</p>
        <div class="contact-links">
          <a href="mailto:your-email@example.com" class="icon-link email-icon" aria-label="Contact via Email">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </a>
          <a href="https://www.pixiv.net/users/your-id" target="_blank" rel="noopener noreferrer" class="icon-link pixiv-icon" aria-label="See Pixiv Profile">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <text x="50%" y="50%" dominant-baseline="central" text-anchor="middle" font-size="20" font-weight="bold">P</text>
            </svg>
          </a>
        </div>
      </div>
    </section>
    <section class="links-section">
      <h2>X (Twitter)</h2>
      <div class="x-accounts">
        {/* Xアカウントのリンクは共通 */}
        <a href="https://x.com/aini_p_001" target="_blank" rel="noopener noreferrer">
          <img src="/images/icon_x1.png" alt="X Icon" />
          <span>{icon1Name}</span>
        </a>
        <a href="https://x.com/aini_2_chan" target="_blank" rel="noopener noreferrer">
          <img src="/images/icon_x2.png" alt="X Icon" />
          <span>{icon2Name}</span>
        </a>
        <a href="https://x.com/aini_p_003" target="_blank" rel="noopener noreferrer">
          <img src="/images/icon_x3.png" alt="X Icon" />
          <span>{icon3Name}</span>
        </a>
        <a href="https://x.com/aini_p_004" target="_blank" rel="noopener noreferrer">
          <img src="/images/icon_x4.png" alt="X Icon" />
          <span>{icon4Name}</span>
        </a>
        <a href="https://x.com/aini_p_005" target="_blank" rel="noopener noreferrer">
          <img src="/images/icon_x5.png" alt="X Icon" />
          <span>{icon5Name}</span>
        </a>
      </div>
    </section>
    <section class="links-section">
      <h2>{t['profile.fansite']}</h2>
      <div class="banner-links">
        <a href="https://www.patreon.com/aini_2_chan" target="_blank" rel="noopener noreferrer" class="banner-link">
          <img src="/images/patreon-banner.png" alt="Patreon" />
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
<style is:inline>
  /* 日本語のprofile.astroと同じスタイルをコピー */
  .container { max-width: 800px; margin: 0 auto; padding: 2rem; display: flex; flex-direction: column; gap: 3rem; }
  h1 { font-size: 1.8rem; margin-bottom: 0.5rem; }
  h2 { font-size: 1.5rem; margin-bottom: 1.5rem; border-bottom: 2px solid #ccc; padding-bottom: 0.5rem; }
  p { font-size: 1.1rem; line-height: 1.8; }
  .profile-section { display: flex; align-items: center; gap: 2rem; }
  .profile-icon { width: 150px; height: 150px; border-radius: 50%; object-fit: cover; border: 3px solid #eee; }
  .x-accounts { display: flex; flex-wrap: wrap; gap: 1.5rem; }
  .x-accounts a { display: flex; align-items: center; gap: 0.5rem; text-decoration: none; color: inherit; transition: transform 0.2s; }
  .x-accounts a:hover { transform: translateY(-4px); }
  .x-accounts img { width: 48px; height: 48px; }
  .banner-links { display: flex; flex-direction: column; gap: 1.5rem; }
  .banner-link img { width: 100%; border-radius: 8px; transition: transform 0.2s, box-shadow 0.2s; }
  .banner-link:hover img { transform: scale(1.04); box-shadow: 0 4px 15px rgba(0,0,0,0.1); }
  .contact-links { display: flex; flex-direction: row; gap: 1rem; margin-top: 1rem; }
  .icon-link { display: inline-flex; justify-content: center; align-items: center; width: 50px; height: 50px; border-radius: 50%; transition: all 0.2s ease-in-out; }
  .icon-link:hover { transform: scale(1.1); }
  .email-icon { background-color: #f0f0f0; }
  .email-icon:hover { background-color: #e0e0e0; }
  .email-icon svg { stroke: #333; }
  .pixiv-icon { background-color: #0096fa; }
  .pixiv-icon:hover { background-color: #007bc5; }
  .pixiv-icon svg { fill: #fff; }
  @media (prefers-color-scheme: dark) {
    h2 { border-color: #555; }
    .profile-icon { border-color: #444; }
    .email-icon { background-color: #333; }
    .email-icon:hover { background-color: #555; }
    .email-icon svg { stroke: #eee; }
  }
</style>